{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",

  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "include-component-in-tag": false,
  "pull-request-title-pattern": "chore${scope}: release ${component} ${version}",
  "group-pull-request-title-pattern": "chore${scope}: release ${component} ${version}",
  "release-type": "rust",

  "packages": {
    ".": {
      "exclude-paths": ["^packages/.*", "^plugins/.*"],
      "component": "retrom"
    },
    "packages/client": {
      "component": "retrom-client"
    },
    "packages/codegen": {
      "component": "retrom-codegen"
    },
    "packages/db": {
      "component": "retrom-db"
    },
    "packages/service": {
      "component": "retrom-service"
    },
    "plugins/retrom-plugin-installer": {
      "component": "retrom-plugin-installer"
    },
    "plugins/retrom-plugin-launcher": {
      "component": "retrom-plugin-launcher"
    }
  },
  "plugins": [
    { "type": "cargo-workspace", "merge": false },
    {
      "type": "linked-versions",
      "groupName": "retrom_group",
      "components": [
        "retrom",
        "retrom-client",
        "retrom-codegen",
        "retrom-db",
        "retrom-service",
        "retrom-plugin-installer",
        "retrom-plugin-launcher"
      ]
    }
  ]
}

{
  "$schema": "../../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm --filter=web build && pnpm prepareNode",
    "beforeDevCommand": "pnpm --filter=web dev",
    "frontendDist": "http://localhost:3000",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "A centralized game library/collection management service with a focus on emulation. Configure once, play anywhere.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null
    },
    "shortDescription": "A centralized game library/collection management service with a focus on emulation. Configure once, play anywhere.",
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "productName": "retrom-client",
  "identifier": "com.retrom.app",
  "plugins": {},
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Retrom",
        "width": 800
      }
    ],
    "security": {
      "csp": null
    }
  }
}
